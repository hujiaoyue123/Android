<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/course_image"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="434px"/>

    <ImageView
        android:id="@+id/course_teacher_image"
        android:layout_below="@id/course_image"
        android:layout_marginLeft="22px"
        android:layout_marginTop="32px"
        android:layout_width="81px"
        android:layout_height="81px"/>

    <TextView
        android:id="@+id/course_title"
        android:layout_alignTop="@+id/course_teacher_image"
        android:layout_toRightOf ="@+id/course_teacher_image"
        android:layout_marginLeft="22px"
        android:textSize="28px"
        android:layout_width="wrap_content"
        android:textColor="#080810"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/course_teacher_name"
        android:layout_below="@+id/course_title"
        android:layout_toRightOf ="@+id/course_teacher_image"
        android:layout_marginLeft="22px"
        android:layout_marginTop="19px"
        android:textSize="22px"
        android:layout_width="wrap_content"
        android:textColor="#999999"
        android:layout_height="wrap_content" />

</com.zhy.autolayout.AutoRelativeLayout>